{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "declaration": true,
    "lib": ["DOM", "ESNext"],
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declarationMap": false
  },
  "include": ["src/**/*", "demo/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
